<section class="home-latest" style="margin:24px 0;">
  <h2 style="font-size:20px;color:#2e6b56;margin:0 0 10px;">Guides populaires</h2>

  <!-- DEBUG: si tu lis ceci, home-latest.njk est bien inclus -->
  <div style="font-size:12px;color:#999;margin-bottom:8px;">[DEBUG latest]</div>

  <div class="articles" style="display:grid; grid-template-columns:repeat(3,1fr); gap:12px;">
    {% set items = (collections.post or collections.posts or collections.all) | reverse | slice(0,3) %}
    {% if items and items.length %}
      {% for post in items %}
        <article style="border:1px solid #eee;border-radius:10px;padding:10px;background:#fff;">
          <a href="{{ post.url }}" style="text-decoration:none;color:inherit;">
            {% if post.data.image %}
              <img src="{{ post.data.image }}" alt="" style="width:100%;height:auto;border-radius:8px;">
            {% endif %}
            <h3 style="font-size:16px;margin:8px 0 0;">{{ post.data.title or post.fileSlug }}</h3>
          </a>
        </article>
      {% endfor %}
    {% else %}
      <p style="margin:0;">Aucun article pour l’instant.</p>
    {% endif %}
  </div>

  <div style="text-align:center;margin-top:12px;">
    <a href="/blog" class="btn" style="padding:8px 12px;border:1px solid #2e6b56;border-radius:8px;color:#2e6b56;text-decoration:none;">Voir tous les articles →</a>
  </div>
</section>
