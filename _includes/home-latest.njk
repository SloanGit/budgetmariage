{# _includes/home-latest.njk #}
<section class="card" style="margin-top:16px">
  <div style="display:flex;justify-content:center;margin:6px 0 12px">
    <a href="/blog/" class="btn btn-ghost" style="padding:.55rem .9rem;border:1px solid #8a9a7b;border-radius:8px;text-decoration:none">
      Voir tous les articles â†’
    </a>
  </div>

  <div style="display:grid;gap:14px;--cols:1">
    <style>@media(min-width:760px){.latest-grid-3{grid-template-columns:repeat(3,1fr)}}</style>
    <div class="latest-grid-3" style="display:grid;gap:14px">
      {% for post in collections.posts | slice(0,3) %}
        <article class="post-card" style="border:1px solid #e7e7e7;border-radius:10px;overflow:hidden">
          <a href="{{ post.url | url }}" style="color:inherit;text-decoration:none;display:block">
            {% if post.data.cover %}
              <img src="{{ post.data.cover }}" alt="" style="width:100%;height:150px;object-fit:cover;display:block;background:#f3f3f3">
            {% endif %}
            <div style="padding:10px">
              <h3 style="margin:0 0 6px;font-size:1rem">{{ post.data.title }}</h3>
              <div style="opacity:.7;font-size:.9rem">{{ post.date | date("dd LLL yyyy") }}</div>
            </div>
          </a>
        </article>
      {% endfor %}
    </div>
  </div>
</section>
