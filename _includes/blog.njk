{% extends "page.njk" %}
{% block content %}
  <section class="card" style="padding:18px">
    <h1 class="section-title">Blog – Conseils budget mariage</h1>
    <p class="muted" style="margin-top:6px">
      Guides pratiques, méthodes, et études de prix pour optimiser votre budget de mariage.
    </p>

    <div class="three-grid" style="margin-top:12px">
      {% for post in collections.posts %}
        <a class="card-link" href="{{ post.url }}">
          {% if post.data.cover %}
            <img src="{{ post.data.cover }}" alt="">
          {% else %}
            <img src="https://images.unsplash.com/photo-1522673607200-164d1b6ce486?q=80&w=800" alt="">
          {% endif %}
          <h3>{{ post.data.title }}</h3>
        </a>
      {% endfor %}
    </div>
  </section>
{% endblock %}
