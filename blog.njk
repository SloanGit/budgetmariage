---
title: "Articles & Conseils"
layout: page.njk
pagination:
  data: collections.post
  size: 10
  reverse: true
permalink: "blog/{% if pagination.pageNumber > 0 %}page/{{ pagination.pageNumber + 1 }}/{% endif %}index.html"
---

<div class="grid" style="display:grid;gap:16px;grid-template-columns:repeat(auto-fill,minmax(260px,1fr))">
  {% for post in pagination.items %}
  <article style="border:1px solid var(--line);border-radius:14px;background:#fff;overflow:hidden">
    {% if post.data.cover %}
      <img src="{{ post.data.cover | url }}" alt="" style="width:100%;aspect-ratio:16/9;object-fit:cover">
    {% endif %}
    <div style="padding:14px">
      <h2 style="margin:0 0 6px 0;font-size:20px"><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
      {% if post.data.excerpt %}<p style="margin:0 0 8px;color:var(--muted)">{{ post.data.excerpt }}</p>{% endif %}
      <small style="color:var(--muted)">{{ post.date | date('dd/MM/yyyy') }}</small>
    </div>
  </article>
  {% endfor %}
</div>

{% if pagination.href.next or pagination.href.previous %}
<nav style="display:flex;gap:10px;justify-content:center;margin-top:20px">
  {% if pagination.href.previous %}<a href="{{ pagination.href.previous }}" style="border:1px solid var(--brand);padding:8px 12px;border-radius:10px">← Précédent</a>{% endif %}
  {% if pagination.href.next %}<a href="{{ pagination.href.next }}" style="border:1px solid var(--brand);padding:8px 12px;border-radius:10px">Suivant →</a>{% endif %}
</nav>
{% endif %}
